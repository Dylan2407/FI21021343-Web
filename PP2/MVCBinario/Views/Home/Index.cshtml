@{
    ViewData["Title"] = "Validacion Binaria";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-dark text-white text-center">
                    <h4>Operaciones binarias</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="Index">
                        <div class="mb-3">
                            <label for="a" class="form-label">a:</label>
                            <input type="text" class="form-control" id="a" name="a" placeholder="Ingrese un numero binario" required>
                        </div>

                        <div class="mb-3">
                            <label for="b" class="form-label">b:</label>
                            <input type="text" class="form-control" id="b" name="b" placeholder="Ingrese un numero binario" required>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </div>
                    </form>

                    @if (ViewBag.Errores != null)
                    {
                        <div class="alert alert-danger mt-4">
                            <h5>Errores en la validacion:</h5>
                            <ul>
                                @foreach (var e in ViewBag.Errores)
                                {
                                    <li>@e</li>
                                }
                            </ul>
                        </div>
                    }

                    @if (ViewBag.Exito != null)
                    {
                        <div class="alert alert-success mt-4 text-center">
                            @ViewBag.Exito

                                      @if (ViewBag.OperacionesBinarias != null)
                            {
                                <div class="mt-4">
                                    <h5>Operaciones Binarias:</h5>
                                    <ul class="list-group">
                                        @foreach (var op in ViewBag.OperacionesBinarias)
                                        {
                                            <li class="list-group-item"><strong>@op.Key:</strong> @op.Value</li>
                                        }
                                    </ul>
                                </div>
                            }

                            @if (ViewBag.Suma != null)
                            {
                                <div class="mt-4">
                                    <h5>Resultado de la Suma:</h5>
                                    <ul class="list-group">
                                        @foreach (KeyValuePair<string, string> item in ViewBag.Suma)
                                        {
                                            <li class="list-group-item"><strong>@item.Key:</strong> @item.Value</li>
                                        }
                                    </ul>
                                </div>
                            }

                            @if (ViewBag.Multiplicacion != null)
                            {
                                <div class="mt-4">
                                    <h5>Resultado de la Multiplicacion:</h5>
                                    <ul class="list-group">
                                        @foreach (KeyValuePair<string, string> item in ViewBag.Multiplicacion)
                                        {
                                            <li class="list-group-item"><strong>@item.Key:</strong> @item.Value</li>
                                        }
                                    </ul>
                                </div>
                            }

                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
